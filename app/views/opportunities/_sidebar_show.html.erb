<div class="panel" id="summary">
  <div class="caption">
    <% t :opportunity_summary%>
  </div>
  <li>
    <dt><%= @opportunity.stage ? t(@opportunity.stage) : t(:other)%></dt>
    <tt><%t :stage%>:</tt>
  </li>
  <li>
    <dt><%= @opportunity.closes_on ? l(@opportunity.closes_on, :format => :mmdd) : t(:n_a)%></dt>
    <tt><%t :close_date%></tt>
  </li>
  <% if @opportunity.closes_on && @opportunity.stage !~ /lost|won/%>
    <li>
      <% days_left = (@opportunity.closes_on - Date.today).to_i %>
      <% if days_left >= 0 %>
        <dt>
          <%= days_left%>
        </dt>
        <dt>
          <% t :days_left%>:
        </dt>
      <% else %>
        <dt class="warn"><%= t('pluralize.day', :count => (days_left * -1))%> </dt>
        <tt><%t :days_late%>:</tt>
      <% end %>
    </li>
  <% end %>
  <li>
    <dt><%= @opportunity.probability ? @opportunity.probability.to_s + "%" : t(:n_a)%></dt>
    <tt><%t :probability%>:</tt>
  </li>

  <li>
    <dt><%= @opportunity.amount ? number_to_currency(@opportunity.amount || 0, :precision => 0) : t(:n_a)%></dt>
    <tt><% t :amount%>:</tt>
  </li>

  <li>
    <dt><%= @opportunity.discount ? number_to_currency(@opportunity.discount || 0, :precision => 0) : t(:n_a)%></dt>
    <% if @opportunity.amount && @opportunity.discount %>
      <tt><%= Discount ("#{number_to_percentage(@opportunity.discount / @opportunity.amount * 100, :precision => 1)}")%>:</tt>
    <% else %>
      <tt><%t :discount%>:</tt>
    <% end %>
  </li>

  <li>
    <dt><%= @opportunity.amount ? number_to_currency(@opportunity.weighted_amount || 0, :precision => 0) : t(:n_a)%></dt>
    <tt><%t :weighted_amount%>:</tt>
  </li>

  <li>
    <dt><%= @opportunity.assigned_to ? truncate(@opportunity.assignee.full_name, :length => 16) : nil %></dt>
    <tt><% t :assigned_to%>:</tt>
  </li>

  <li>
    <dt>
      <% if @opportunity.account%>
        <%= link_to(truncate(@opportunity.account.name, :length => 16), @opportunity.account, :title => @opportunity.account.name)%>
      <% else %>
        <%t :n_a%>
      <% end %>
    </dt>
    <tt>
      <%t :account%>
    </tt>
  </li>

  <li class="last">
    <dt>
      <% if @opportunity.campaign%>
        <%= link_to(truncate(@opportunity.campaign.name, :length => 16), @opportunity.campaign, :title => @opportunity.campaign.name)%>
      <% else %>
        <%t :n_a%>
      <% end %>
    </dt>
    <tt>
      <%t :campaign%>
    </tt>
  </li>

  <% unless @opportunity.background_info.blank? %>
    <div class="caption">
      <%t :background_info%>
    </div>
  <% end %>

  <%= auto_link(simple_format @opportunity.background_info) %>

  <% if @opportunity.tag_list.present? %>
    <dt>
      <div class="tags">
        <%= tags_for_index(@opportunity)%>
      </div>
    </dt>
  <% end %>

  <%= hook(:show_opportunity_sidebar_bottom, self, :opportunity => @opportunity)%>

</div>