<%= styles_for :campaign %>

<%= render 'entities/title_bar' %>

<div class="remote" id="create_campaign" hidden></div>

<%= render 'search' %>

<div class="remote" id="options" hidden></div>

<div class="list" id="campaigns">
  <% if @campaigns.any? %>
    <%= render @campaigns %>
  <% else %>
    <%= render "shared/empty" %>
  <% end %>
</div>

<div id="paginate">
  <%= render "shared/paginate_with_per_page" %>
</div>

<div id="export">
  <%= render "shared/export" %>
</div>
