<table cellpadding="3" cellspacing="0" style="width: 100%; margin: 2px 0px 10px 0px">
  <tr>
    <td class="selector left <%= @view == 'pending' ? 'on' : 'off' %>" width="33%" onclick="document.location.href='<%= tasks_path %>'">
      <%= t :pending_tab %>
    </td>

    <td class="selector <%= @view == 'assigned' ? 'on' : 'off' %>" width="33%" onclick="document.location.href='<%= url_for(:action => :index, :view => "assigned" %>'">
      <%= t :assigned_tab %>
    </td>
  
    <td class="selector left <%= @view == 'pending' ? 'on' : 'off' %>" width="33%" onclick="document.location.href='<%= url_for(:action => :index, :view => "completed" %>'">
      <%= t :completed_tab %>
    </td>
  </tr>
</table>
