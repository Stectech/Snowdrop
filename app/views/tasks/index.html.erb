<%= styles_for :task %>

<% if @view == "completed" %>
  <% buckets = Setting.unroll(:task_completed) %>
  <div class="title">
    <%= t(:completed_tasks) %>
    <%= image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;") %>
  </div>
<% else %>
  <% buckets = Setting.unroll(:task_bucket) %>
  <%= render "title" %>
<% end %>

<div class="log" id="tasks">
  <% buckets.each do |value, key| %>
    <div <%= hidden_if(filtered_out?(@view, key)) %> id= "list_<%= key %>" %> >
      <h3 class="<%= key %>">
        <%= t(value) %>
      </h3>

      <div class="bucket" id="<%= key %>">
        <%= render  :partial => @view, 
                    :collection => @tasks[key] || [], :locals => { :bucket => key } %>
      </div>
    </div>
  <% end %>

  <% if @tasks.values.flatten.blank? %>
    <%= render "empty" %>
  <% end %>
</div>

<div id="export">
  <%= render "shared/export" %>
</div>
