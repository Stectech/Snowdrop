<% edit ||= false %>

<% collapsed = @comment_body.nil?  && f.object.errors.empty? %>

<%= subtitle :comment, collapsed, t(:comment) %>

<div class="section">
  <small id="comment_intro" <%= hidden_if(!collapsed) %>>
    <%= t(:comment_intro) %>
  </small>

  <div id="campaign_comment" <%= hidden_if(collapsed) %>>
    <%= text_area_tag :comment_body, @comment_body %>
  </div>
</div>
