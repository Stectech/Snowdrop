<div class="standalone">
  <%= form_for(@user, :html => one_submit_only) do |f| %>
    <div class="title_tools">
      <%= t :already_signed_up %> <%= link_to t(:login_now_link), login_path %>
    </div>

    <div class="title">
      <%= t :sign_up %>
    </div>

    <%= f.error_messages :object_name => t('user') %>

    <div class="section">
      <div class="label">
        <%= t :email %>:
      </div>
      <%= f.text_field :email %>

      <div class="label">
        <%= t :username %>:
      </div>
      <%= f.text_field :username %>

      <div class="label">
        <%= t :password %>:
      </div>
      <%= f.password_field :password %>

      <div class="label">
        <%= t :password_confirmation %>:
      </div>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="buttonbar">
      <%= f.submit t(:sign_up_button) %>
    </div>
  <% end %>
</div>
