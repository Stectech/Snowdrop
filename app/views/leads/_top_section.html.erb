<%= hook(:lead_top_section, self, :f => f) do %>
  <div class="section">
    <table>
      <tr>
        <td>
          <div class="label top <%= Setting.require_first_names ? 'req' : nil %>">
            <%= t :first_name %>:
          </div>

          <%= f.text_field :first_name, :autofocus => true %>
        </td>

        <td><%= spacer %></td>

        <td>
          <div class="label top <%= Setting.require_last_names ? 'req' : nil %>">
            <%= t :last_name %>:
          </div>

          <%= f.text_field :last_name %>
        </td>
      </tr>

      <tr>
        <td>
          <div class="label">
            <%= t :email %>:
          </div>

          <%= f.text_field :email %>
        </td>

        <td><%= spacer %></td>

        <td>
          <div class="label">
            <%= t :phone %>:
          </div>

          <%= f.text_field :phone %>
        </td>
      </tr>

      <% if Setting.background_info && Setting.background_info.include?(:lead) %>
        <tr>
          <td colspan="3">
            <div class="label">
              <%= t(:background_info) << ':' %>
            </div>

            <%= f.text_area :background_info, :style =>"width:500px", :rows => 3 %>
          </td>
        </tr>
      <% end %>

      <%= render :partial => "/shared/tags", :locals => {:f => f, :span => 3} %>

      <%= hook(:lead_top_section_bottom, self, :f => f) %>
    </table>
  </div>
<% end %>
