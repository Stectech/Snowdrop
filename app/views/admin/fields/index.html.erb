<%= styles_for :fields %>

<div class="title">
  <span id="create_field_title">
    <%= t(:admin_tab_fields) %>
  </span>
</div>

<div class="info">
  <%= t(:admin_fields_info) %>
</div>

<div class="info2">
  <%= t(:admin_fields_info2) %>
</div>

<div class="inline_tabs">
  <ul>
    <% list_of_entities.each do |entity| %>
      <% asset = entity.downcase %>
      <li data-tab-class="<%=asset%>" class="<%"selected" if entity == 'Contact'%>" >
        <%= link_to t(entity), "#"%>
      </li>
    <% end %>
  </ul>
</div>

<% list_of_entities.each do |entity| %>
  <% asset = entity.downcase %>
  <% klass = asset.classify.constantize %>

  <div class="fields" id="<%=asset%>_section" style="<%"display: none;" if asset != 'contact'%>">
    <% create_form_id = "#{asset}_create_field_group" %>

    <div class="title_tools">
      <%= link_to_inline(create_form_id, new_admin_field_group_path(:klass_name => klass.name), :text => t(:create_field_group)) %>
    </div>

    <div class="title">
      <%= t(asset) %>
    </div>

    <div class="list" id="<%=asset%>_field_groups" data-sortable="<%=sort_admin_field_groups_path(:asset => asset)%>">
      <%= render :partial => "admin/field_groups/field_group", :collection => klass.field_groups, :locals => {:asset => asset, :klass => klass}%>
    </div>

    <div class="remote merge" style="display: none;" id="<%=create_form_id%>"></div>
  </div>

<% end %>