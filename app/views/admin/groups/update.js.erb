<% id = dom_id(@group) %>

<% if @group.errors.empty? %>
  $('#<%=id%>').replaceWith('<%= j render(:partial => "group", :collection => [ @group ]) %>')
  $('#<%=id%>').effect("highlight", { duration:1000 });
<% else %>
  $('#<%=id%>').html('<%= render(:partial => "edit") %>');
  $('#<%=id%>').effect("shake", { duration:250, distance: 6 });
  $('#group_name').focus();
<% end %>
